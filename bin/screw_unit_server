#!/usr/bin/env ruby

dir = File.dirname(__FILE__)
$LOAD_PATH.unshift("#{dir}/../lib")
require "screw_unit"
require "thin"

unless ENV["SCREW_UNIT_SPEC_ROOT"]
  ENV["SCREW_UNIT_SPEC_ROOT"] = ARGV[0]
end

unless ENV["SCREW_UNIT_PUBLIC"]
  ENV["SCREW_UNIT_PUBLIC"] = ARGV[1]
end

ScrewUnit::Server.start
